<div class="container" style="text-align: center;">
  <div class="row">
    <div class="col">

    </div>
    <div class="col-8">
      <h1>Jamal's BnB</h1>
      <p> Welcome to the best BnB site for quality stay at affordable prices! </p>
    
    
      <% if signed_in? %>
      <% else %>
        Have an account?<%= link_to t(".sign_in"), sign_in_path %>
      <% end %>
      <h2>List of Accomodation</h2>
        <% if signed_in? %>
          <%= link_to 'Create New List', new_listing_path %>
        <% end %>
      <table class="table" style="">
        <tr>
          <th>Title</th>
          <th>Address</th>
          <th>Price Per Day</th>
          <th></th>
        </tr>
          <% @listings.each do |listing| %>
            <tr>
              <td><%= listing.title %></td>
              <td><%= listing.address %></td>
              <td><%= listing.price_per_day %></td>
              <td><%= listing.tags.map(&:name).join(",") %></td>
              <% if signed_in? %>
                <td><%= link_to 'Show', listing_path(listing) %></td>
                <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
                <td><%= link_to 'Destroy', listing_path(listing), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
      </table>
      <%= paginate @listings %>
    </div>
    <div class="col">

    </div>
  </div>
</div>  
